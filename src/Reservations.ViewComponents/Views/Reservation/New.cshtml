@{
    ViewData["Title"] = "New reservation";
}

<h2>@ViewData["Title"]</h2>
<form action="/reservation/new" method="post">
    <input type="hidden" id="ReservationId" name="ReservationId" value="@Model.ReservationId">
    <div>
        @await Component.InvokeAsync("ReservationSummaryCustomerDetails", Model)
    </div>
    <div>
        @await Component.InvokeAsync("ReservationSummaryPaymentDetails", Model)
    </div>
    <div>
        @await Component.InvokeAsync("ReservationSummaryViewDetails", Model)
    </div>
    <div>
        <input type="submit" value="Book Now!" />
    </div>
</form>